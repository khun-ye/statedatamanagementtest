<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- res/values/styles.xml -->
    <style name="GenderToggleButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:insetTop">8dp</item>
        <item name="android:insetBottom">8dp</item>
    </style>

    <style name="GenderToggleButton.Selected">
        <item name="android:backgroundTint">@color/selected_button_background_color</item>
        <item name="android:textColor">@color/selected_button_text_color</item>
    </style>

    <style name="GenderToggleButton.Unselected">
        <item name="android:backgroundTint">@color/unselected_button_background_color</item>
        <item name="android:textColor">@color/unselected_button_text_color</item>
    </style>

</resources>